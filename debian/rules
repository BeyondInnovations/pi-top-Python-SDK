#!/usr/bin/make -f

export PYBUILD_NAME=pt-pma

%:
	dh $@ --with=sphinxdoc --buildsystem=pybuild

override_dh_auto_test:
	# Don't run the tests!

override_dh_auto_build:
	dh_auto_build
	PYTHONPATH=. sphinx-build -v -N -bhtml docs/ build/html
	# PYTHONPATH=. sphinx-build -v -N -bman  docs/ build/man
